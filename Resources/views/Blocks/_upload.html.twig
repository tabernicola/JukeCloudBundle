<!-- The template to display files available for upload -->
<script id="template-upload" type="text/x-tmpl">
{% verbatim %}   
    {% for (var i=0, file; file=o.files[i]; i++) { %}
    <tr class="template-upload fade">
        <td><span class="preview"></span></td>
        <td>
            <p class="name">{%=file.name%}</p>
            <strong class="error text-danger"></strong>
        </td>
        <td><p class="size">Processing...</p></td>
        <td><input type="text" required="true" id="form-band-{%=file.name.replace(/ /g,'-').replace(/[^\w-]+/g,'')%}" name="artist" placeholder="Grupo"></input></td>
        <td><input type="text" required="true" id="form-disk-{%=file.name.replace(/ /g,'-').replace(/[^\w-]+/g,'')%}" name="disk" placeholder="Disco"></input></td>
        <td><input type="text" required="true" id="form-number-{%=file.name.replace(/ /g,'-').replace(/[^\w-]+/g,'')%}" name="number" placeholder="Nº" class="number"></input></td>
        <td><input type="text" required="true" id="form-song-{%=file.name.replace(/ /g,'-').replace(/[^\w-]+/g,'')%}" name="title" placeholder="Canción"></input></td>
        <td>
            <div class="progress progress-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0">
                <div class="progress-bar progress-bar-success" style="width:0%;"></div>
            </div>
        </td>
        <td>
            {% if (!i && !o.options.autoUpload) { %}
            <button class="btn btn-primary start" disabled>
                <i class="glyphicon glyphicon-upload"></i>
                <span>Start</span>
            </button>
            {% } %}
            {% if (!i) { %}
            <button class="btn btn-warning cancel">
                <i class="glyphicon glyphicon-ban-circle"></i>
                <span>Cancel</span>
            </button>
            {% } %}
        </td>
    </tr>
    {% } %}
{% endverbatim %}
</script>
<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" id="add-song-div">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Añade más canciones a la colección</h4>
            </div>
            <div class="modal-body">
                {{ render(controller('TabernicolaJukeCloudBundle:Plugin:renderPluginPlaylist' )) }}
            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>