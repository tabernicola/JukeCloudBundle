<div class="well">
    <div class="panel-body">
        <form role="form">
            <div id="artist-selector"  class="hide">
                <div class="form-group">
                    <select id="artist-list" class="form-control">
                        <option value="0">Selecciona un grupo...</option>
                    </select>
                </div>
                <div class="form-group">
                    <button id="play-artist" type="button" class="btn btn-default btn-half first">play</button>
                    <button id="add-artist" type="button" class="btn btn-default btn-half">add</button>
                </div>
            </div>
            <div id="disk-selector" class="hide">
                <div class="form-group">
                    <select id="disk-list" class="form-control">
                        <option value="0">Selecciona un disco...</option>
                    </select>
                </div>
                <div class="form-group">
                    <button id="play-disk" type="button" class="btn btn-default btn-half first">play</button>
                    <button id="add-disk" type="button" class="btn btn-default btn-half">add</button>
                </div>
            </div>    
            <div id="song-selector" class="hide">
                <div class="form-group">
                    <select id="song-list" class="form-control">
                        <option value="0">Selecciona una cancion...</option>
                    </select>
                </div>
                <div class="form-group">
                    <button id="library-play-song" type="button" class="btn btn-default btn-half first">play</button>
                    <button id="library-add-song" type="button" class="btn btn-default btn-half">add</button>
                </div>
            </div>
        </form>
    </div>
</div>    